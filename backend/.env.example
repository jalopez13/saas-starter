# Database (use port 5433 for Docker PostgreSQL, 5432 for local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/saas_starter

# Redis
REDIS_URL=redis://localhost:6379/0

# Better-auth (for cookie validation)
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# App
APP_ENV=development
DEBUG=true
SECRET_KEY=your-app-secret-key

# CORS
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
